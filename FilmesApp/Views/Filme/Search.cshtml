@using FilmesApp.Models.TmdbDtos
@model SearchResultDto?

@{
    ViewBag.Title = "Buscar Filmes (TMDb)";
}

<div class="search-glass mx-auto mb-5">
    <h1 class="text-center mb-4 fw-bold neon-title">Buscar Filmes</h1>

    <form method="get" asp-action="Search">
        <div class="search-wrapper">
            <input type="text" name="query" value="@ViewBag.Query"
                   class="search-input-modern"
                   placeholder="Digite o nome de um filme..." />

            <button class="btn-search-modern" type="submit">
                 Buscar
            </button>
        </div>
    </form>
</div>



@if (Model == null || Model.Results == null)
{
    <div class="alert alert-info text-center mx-auto" style="max-width: 800px;">
        @ViewBag.Message ?? "Nenhum resultado."
    </div>
}
else
{
    <div class="mx-auto" style="max-width: 1100px;">
        <p class="text-muted">
            Mostrando página @Model.Page de @Model.TotalPages — Total: @Model.TotalResults resultados
        </p>

        <div class="row">
            @foreach (var item in Model.Results)
            {
                <div class="col-md-4 mb-4">
                    <div class="movie-glass-card p-3">
                        @await Html.PartialAsync("../Partial/_MovieCard", item)

                        <form asp-action="Import" method="post" class="mt-3">
                            <input type="hidden" name="tmdbId" value="@item.Id" />

                            <div class="mb-2">
                                <label class="form-label">Latitude</label>
                                <input name="latitude" class="form-control" placeholder="Ex: -23.55" />
                            </div>

                            <div class="mb-2">
                                <label class="form-label">Longitude</label>
                                <input name="longitude" class="form-control" placeholder="Ex: -46.63" />
                            </div>

                            <button class="btn btn-import-modern w-100" type="submit">Importar</button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.Page ? "active" : "")">
                        <a class="page-link"
                           href="@Url.Action("Search", new { query = ViewBag.Query, page = p })">@p</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
}

<style>
    
    body {
        background: #121212;
        color: #E0E0E0;
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .neon-title {
        font-size: 2.8rem; 
        letter-spacing: 1px;
        font-weight: 700;
        color: #FFFFFF;
        text-shadow: 0 0 10px rgba(229, 9, 20, 0.5);
    }
    
    .search-glass {
        max-width: 820px;
        padding: 32px;
        border-radius: 16px; 
        background: rgba(30, 30, 30, 0.7);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.08); 
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37); 
    }
    
    .search-wrapper {
        display: flex;
        gap: 16px; 
    }

    .search-input-modern {
        flex: 1;
        background: #1E1E1E; 
        border: 1px solid #333333;
        border-radius: 12px;
        padding: 14px 18px;
        color: #E0E0E0;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .search-input-modern::placeholder {
        color: #888888;
    }

    .search-input-modern:focus {
        outline: none;
        background: #252525;
        border-color: #E50914; 
        box-shadow: 0 0 0 3px rgba(229, 9, 20, 0.3);
    }
    
    .btn-search-modern {
        padding: 14px 28px;
        border-radius: 12px;
        border: none;
        font-weight: 600;
        letter-spacing: 0.5px;
        color: #FFFFFF;
        background: #E50914;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-search-modern:hover {
        transform: translateY(-1px);
        background: #B9090B; 
        box-shadow: 0 4px 12px rgba(229, 9, 20, 0.4);
    }
    
    .movie-glass-card {
        background: rgba(30, 30, 30, 0.6); 
        backdrop-filter: blur(10px);
        border-radius: 12px;
        padding: 20px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

    .movie-glass-card:hover {
        transform: translateY(-4px); 
        background: rgba(40, 40, 40, 0.7);
        border-color: rgba(229, 9, 20, 0.2);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
    }
    
    .form-control {
        background: #1E1E1E;
        border: 1px solid #333333;
        color: #E0E0E0;
        border-radius: 8px;
        padding: 10px 12px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #E50914;
        background: #252525;
        box-shadow: 0 0 0 3px rgba(229, 9, 20, 0.3);
    }
    
    .btn-import-modern {
        padding: 12px;
        border-radius: 8px;
        font-weight: 600;
        letter-spacing: 0.5px;
        background: #E50914;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-import-modern:hover {
        transform: translateY(-1px);
        background: #B9090B;
        box-shadow: 0 4px 12px rgba(229, 9, 20, 0.4);
    }
    
    .alert-info {
        background: rgba(30, 30, 30, 0.8);
        border: 1px solid rgba(229, 9, 20, 0.2);
        color: #E0E0E0;
        backdrop-filter: blur(8px);
        border-radius: 10px;
    }
    
    .pagination .page-link {
        background: #1E1E1E;
        color: #E0E0E0;
        border: 1px solid #333333;
        transition: all 0.3s ease;
    }

    .pagination .page-item.active .page-link {
        background: #E50914; /* Cor sólida de destaque */
        border-color: #E50914;
        color: #FFFFFF;
    }

    .pagination .page-link:hover {
        background: #252525;
        color: #E50914;
    }

    .pagination .page-item.active .page-link:hover {
        background: #B9090B;
        color: #FFFFFF;
    }

    /* Estilo para o texto de informação da paginação */
    .text-muted {
        color: #888888 !important;
        margin-bottom: 15px;
    }
</style>


